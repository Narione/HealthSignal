<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.nextit.healthsignal.notice.NoticeMapper">
    <!--공지사항 목록 가져오기-->
    <select id="selectNoticeList" resultType="noticeVO">
        SELECT
            NTC_NO,
            USER_NO,
            NTC_TITLE,
            NTC_CONTENT,
            NTC_HITS,
            NTC_DEL,
            NTC_CRE_DATE
        FROM
            NOTICE
        WHERE
            NTC_DEL = 'N'
        ORDER BY
            NTC_CRE_DATE DESC
    </select>
    <!--공지사항 글 가져오기-->
    <select id="selectNotice" parameterType="int" resultType="noticeVO">
        SELECT
            NTC_NO,
            USER_NO,
            NTC_TITLE,
            NTC_CONTENT,
            NTC_HITS,
            NTC_DEL,
            NTC_CRE_DATE
        FROM
            NOTICE
        WHERE
            NTC_NO = #{ntcNo}
    </select>
</mapper>